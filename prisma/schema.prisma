generator client {
  provider     = "prisma-client"
  output       = "./generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

model User {
  id String @id @default(uuid())

  email    String @unique
  password String
  name     String
  role     UserRole @default(USER)

  createrAt DateTime @default(now()) @map("created_at")
  updateAt  DateTime @updatedAt @map("update_at")

  @@map("users")
}

enum UserRole {
  ADMIN
  USER
}
